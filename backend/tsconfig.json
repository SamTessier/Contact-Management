{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "./types/**/*.d.ts"
  ]
}
